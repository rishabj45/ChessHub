{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist", ".eslintrc.json", "*.js", "vite.config.ts"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn"
  }
}
